[user]
    email = maratamerov@gmail.com
    name = amerov
[push]
    default = current
[color]
    sh = auto
    ui = true
[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    l = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lo = log --no-merges --oneline
    p = pull -v
    s = status
    co = commit -v
    ca = commit --amend
    ch = checkout
    b = branch
    sdiff = diff --staged
    cdiff = diff --cached
[rerere]
    enabled = true
    autoupdate = true
[core]
    autocrlf = input
    excludesfile = /home/amerov/.gitexcludes
[merge]
    tool = nvimdiff

[difftool]
    prompt = true
[diff]
    tool = nvimdiff
    algorithm = patience
[difftool "nvimdiff"]
    cmd = "nvim -d -u ~/.config/nvim/init.vim \"$LOCAL\" \"$REMOTE\""
